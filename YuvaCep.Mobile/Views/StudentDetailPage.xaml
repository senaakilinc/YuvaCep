<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YuvaCep.Mobile.Views.StudentDetailPage"
             Title="Öğrenci Detayı"
             BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                <Frame CornerRadius="60" HeightRequest="120" WidthRequest="120" 
                       Padding="0" IsClippedToBounds="True" BorderColor="#A78BFA">
                    <Image Source="{Binding ProfileImage}" Aspect="AspectFill" HeightRequest="120" WidthRequest="120">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangePhotoCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Frame>
                <Label Text="Fotoğrafı değiştirmek için dokunun" FontSize="10" TextColor="Gray" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*, Auto" HorizontalOptions="Center">

                <Label FontSize="22" FontAttributes="Bold" TextColor="#1F2937"
                       IsVisible="{Binding IsNotNameEditing}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding FirstName}" />
                            <Span Text=" " />
                            <Span Text="{Binding LastName}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <HorizontalStackLayout IsVisible="{Binding IsNameEditing}" Spacing="5">
                    <Entry Text="{Binding FirstName}" Placeholder="Ad" WidthRequest="100"/>
                    <Entry Text="{Binding LastName}" Placeholder="Soyad" WidthRequest="100"/>
                </HorizontalStackLayout>

                <ImageButton Grid.Column="1" Source="icon_edit.png" 
                             HeightRequest="25" WidthRequest="25" Margin="10,0,0,0"
                             Command="{Binding ToggleNameEditCommand}"
                             VerticalOptions="Center"
                             BackgroundColor="Transparent"/>
            </Grid>

            <Label Text="{Binding ParentName, StringFormat='Veli: {0}'}" 
                   FontSize="14" TextColor="Gray" 
                   HorizontalOptions="Center" Margin="0,-10,0,0"/>

            <Frame CornerRadius="15" Padding="20" BackgroundColor="White" HasShadow="True" BorderColor="Transparent">
                <VerticalStackLayout Spacing="15">

                    <VerticalStackLayout>
                        <Label Text="Cinsiyet" FontSize="12" TextColor="Gray"/>
                        <Picker SelectedItem="{Binding Gender}" Title="Seçiniz">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Erkek</x:String>
                                    <x:String>Kız</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="#F0F0F0"/>

                    <VerticalStackLayout>
                        <Label Text="TC Kimlik Numarası" FontSize="12" TextColor="Gray"/>
                        <Entry Text="{Binding TCIDNumber}" Keyboard="Numeric" Placeholder="TC Giriniz"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="#F0F0F0"/>

                    <VerticalStackLayout>
                        <Label Text="Doğum Tarihi" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding DateOfBirth}"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="#F0F0F0"/>

                    <VerticalStackLayout>
                        <Label Text="Sağlık Notları" FontSize="12" TextColor="#A78BFA" FontAttributes="Bold"/>
                        <Editor Text="{Binding DisplayHealthNotes}" 
                                IsReadOnly="True" 
                                AutoSize="TextChanges" 
                                BackgroundColor="#F9F9F9" 
                                TextColor="#1F2937"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <Button Text="DEĞİŞİKLİKLERİ KAYDET" 
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#A78BFA"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>