<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:YuvaCep.Mobile.ViewModels"
             x:Class="YuvaCep.Mobile.Views.StudentChartDetailPage"
             x:DataType="viewModels:StudentChartDetailViewModel"
             Title="{Binding PageTitle}"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *, Auto" Padding="0">

        <Grid Grid.Row="0" BackgroundColor="#2C3E50" HeightRequest="60" Padding="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Command="{Binding GoBackCommand}" 
                         Grid.Column="0"
                         VerticalOptions="Center"
                         BackgroundColor="Transparent"
                         HeightRequest="40"
                         WidthRequest="40">
                <ImageButton.Source>
                    <FontImageSource Glyph="&#x2190;" Color="White" Size="24"/>
                </ImageButton.Source>
            </ImageButton>

            <Label Text="{Binding PageTitle}" 
                   Grid.Column="1"
                   TextColor="White" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   Margin="-40,0,0,0"/>
        </Grid>

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Days}"
                        Margin="15">

            <CollectionView.Header>
                <StackLayout Padding="0,0,0,15">
                    <Label Text="{Binding PageTitle}" 
                            TextColor="#333" 
                            FontSize="20" 
                            FontAttributes="Bold" 
                            HorizontalOptions="Center"/>
                    <Label Text="(Takvim Yükleniyor...)" 
                            IsVisible="{Binding IsBusy}" 
                            HorizontalOptions="Center" 
                            TextColor="Gray"/>
                </StackLayout>
            </CollectionView.Header>

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                 Span="7" 
                                 HorizontalItemSpacing="5" 
                                 VerticalItemSpacing="5"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:StudentDayModel">

                    <Border StrokeShape="RoundRectangle 8"
                            HeightRequest="50"
                            WidthRequest="50"
                            BackgroundColor="{Binding BoxColor}"
                            StrokeThickness="0">
                        <Grid>
                            <Label Text="{Binding DayNumber}"
                                   TextColor="{Binding TextColor}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"
                                   VerticalOptions="Start"
                                   Margin="0,2,4,0"/>

                            <Label Text="✓"
                                   IsVisible="{Binding IsCompleted}"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Veri Yüklenemedi" TextColor="Gray"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="2"
                Text="{Binding CompleteButtonText}" 
                Command="{Binding CompleteTodayCommand}"
                IsEnabled="{Binding IsCompleteButtonEnabled}"
                BackgroundColor="{Binding CompleteButtonColor}"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="20"
                HeightRequest="50"
                Margin="20,10,20,20"/>

        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}"
                           Color="#2C3E50"
                           Grid.Row="1"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
    </Grid>
</ContentPage>