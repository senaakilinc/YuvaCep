                <VerticalStackLayout IsVisible="{Binding HasImages}">
                    <Frame Padding="0" CornerRadius="15" HasShadow="True" BorderColor="Gray" HeightRequest="500" BackgroundColor="White">
                        <CarouselView ItemsSource="{Binding CarouselImages}" IndicatorView="indicatorView" Loop="False">
                            <CarouselView.ItemTemplate>
                                <DataTemplate x:DataType="viewModels:CurriculumImageItem">
                                    <Grid>
                                        <Image Source="{Binding Image}" Aspect="AspectFit" HorizontalOptions="Fill" VerticalOptions="Fill"/>

                                        <Frame IsVisible="{Binding IsTeacher}"
                                               HorizontalOptions="End" VerticalOptions="Start" Margin="15"
                                               BackgroundColor="#99000000" CornerRadius="20" HeightRequest="40" WidthRequest="40" Padding="0" BorderColor="Transparent">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding DeleteCommand}"/>
                                            </Frame.GestureRecognizers>
