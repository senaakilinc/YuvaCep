<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YuvaCep.Mobile.Views.RoleSelectionPage"
             BackgroundColor="{StaticResource PageBackgroundColor}"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <BoxView Grid.Row="0" 
                 Color="{StaticResource PrimaryColor}" 
                 HeightRequest="300" 
                 CornerRadius="0,0,100,100" 
                 HorizontalOptions = "FillAndExpand"
                 VerticalOptions="Start"/>

        <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" 
                             Spacing="25" 
                             Padding="30"
                             VerticalOptions="Center">
            <Image Source="img_school.png" 
                   HeightRequest="200"
                   HorizontalOptions="Center" 
                   x:Name="HeroImage"/>

            <Label Text="YuvaCep'e Hoş Geldiniz!"
                   Style="{StaticResource PageTitleStyle}" 
                   HorizontalTextAlignment="Center"
                   x:Name="WelcomeTitleLabel"/>

            <Label Text="Lütfen giriş türünü seçiniz"
                   FontSize="16"
                   TextColor="{StaticResource SecondaryTextColor}"
                   HorizontalOptions="Center"
                   x:Name="WelcomeSubtitleLabel"/>

            <BoxView HeightRequest="10" Color="Transparent"/>

            <Frame x:Name="VeliCard"
                   BackgroundColor="White"
                   CornerRadius="30" 
                   Padding="15"
                   HasShadow="True"
                   BorderColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnParentClicked"/>
                </Frame.GestureRecognizers>

                <Grid ColumnDefinitions="Auto, *">
                    <Image Grid.Column="0" Source="icon_parent.png" 
                           HeightRequest="50" WidthRequest="50" 
                           Aspect="AspectFit" Margin="10,0,15,0"/>

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="Veli Girişi" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource SecondaryColor}"/>
                        <Label Text="Çocuğumun durumunu görmek istiyorum" FontSize="12" TextColor="{StaticResource SecondaryTextColor}"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <Frame x:Name="TeacherCard"
                   BackgroundColor="White"
                   CornerRadius="30"
                   Padding="15"
                   HasShadow="True"
                   BorderColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTeacherClicked"/>
                </Frame.GestureRecognizers>

                <Grid ColumnDefinitions="Auto, *">
                    <Image Grid.Column="0" Source="icon_teacher.png" 
                           HeightRequest="50" WidthRequest="50" 
                           Aspect="AspectFit" Margin="10,0,15,0"/>

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="Öğretmen Girişi" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource PrimaryColor}"/>
                        <Label Text="Sınıfımı yönetmek istiyorum" FontSize="12" TextColor="{StaticResource SecondaryTextColor}"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </Grid>
</ContentPage>