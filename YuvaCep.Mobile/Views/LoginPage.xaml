<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YuvaCep.Mobile.Views.LoginPage"
             Title="Giriş Ekranı"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="PRESCHOOL APP" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="#1F2937" />

            <Label Text="Lütfen Giriş Yapınız"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#6B7280" />

            <Frame BorderColor="Gray" CornerRadius="10" Padding="0" HasShadow="False">
                <Entry Placeholder="TC Kimlik No" 
                       Text="{Binding TcKimlikNo}" 
                       Keyboard="Numeric"
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       BackgroundColor="#F3F4F6" 
                       HeightRequest="58" />
            </Frame>

            <Frame BorderColor="Gray" CornerRadius="10" Padding="0" HasShadow="False">
                <Entry Placeholder="Şifre" 
                       IsPassword="True"
                       Text="{Binding Password}" 
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       BackgroundColor="#F3F4F6"
                       HeightRequest="50" />
            </Frame>

            <HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
                <CheckBox IsChecked="{Binding IsRememberMeChecked}" Color="#2563EB"/>
                <Label Text="Beni Hatırla" VerticalOptions="Center" TextColor="Gray"/>
            </HorizontalStackLayout>

            <Button Text="GİRİŞ YAP" 
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#2563EB" 
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Margin="0,10,0,0"/>

            <Button Text="{Binding RegisterButtonText}"  
                    Command="{Binding GoToRegisterCommand}"
                    BackgroundColor="White" 
                    TextColor="#2563EB" 
                    BorderColor="#2563EB"
                    BorderWidth="2"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>