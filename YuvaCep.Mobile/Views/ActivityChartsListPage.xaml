<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:YuvaCep.Mobile.ViewModels"
             xmlns:dtos="clr-namespace:YuvaCep.Mobile.Dtos"
             xmlns:converters="clr-namespace:YuvaCep.Mobile.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="YuvaCep.Mobile.Views.ActivityChartsListPage"
             x:DataType="viewModels:ActivityChartsListViewModel"
             Title="Ã‡izelgeler"
             BackgroundColor="#F5F5F5">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" 
                                        Command="{Binding LoadChartsCommand}"/>
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <converters:ThemeToIconConverter x:Key="ThemeToIconConverter"/>
        <converters:ThemeToTextConverter x:Key="ThemeToTextConverter"/>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0" BackgroundColor="#8B5CF6" Padding="15">
            <Label Text="Ã–ÄŸretmen Paneli" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>

            <ImageButton Command="{Binding AddNewCommand}" 
                         HorizontalOptions="End" 
                         VerticalOptions="Center" 
                         BackgroundColor="Transparent" 
                         HeightRequest="40"
                         WidthRequest="40">
                <ImageButton.Source>
                    <FontImageSource Glyph="+" Color="White" Size="35"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Charts}" Margin="10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dtos:ActivityChartDto">
                    <Frame Padding="15" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActivityChartsListViewModel}}, Path=GoToDetailCommand}"
                                                  CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="60, *, 40">
                            <Frame Grid.Column="0" HeightRequest="50" WidthRequest="50" CornerRadius="25" BackgroundColor="#F3F4F6" Padding="0" HasShadow="False">
                                <Label Text="{Binding Theme, Converter={StaticResource ThemeToIconConverter}}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                            </Frame>

                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2" Margin="10,0,0,0">
                                <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding Theme, Converter={StaticResource ThemeToTextConverter}}" TextColor="Gray" FontSize="12"/>
                            </VerticalStackLayout>

                            <ImageButton Grid.Column="2" 
                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActivityChartsListViewModel}}, Path=DeleteChartCommand}" 
                                         CommandParameter="{Binding .}" 
                                         BackgroundColor="Transparent" 
                                         HeightRequest="40"
                                         WidthRequest="40">
                                <ImageButton.Source>
                                    <FontImageSource Glyph="ðŸ—‘" Color="#EF4444" Size="24"/>
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="KayÄ±tlÄ± Ã§izelge yok." TextColor="Gray"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#8B5CF6" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>
</ContentPage>