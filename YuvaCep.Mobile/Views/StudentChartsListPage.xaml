<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:YuvaCep.Mobile.ViewModels"
             xmlns:dtos="clr-namespace:YuvaCep.Mobile.Dtos"
             xmlns:converters="clr-namespace:YuvaCep.Mobile.Converters"
             x:Class="YuvaCep.Mobile.Views.StudentChartsListPage"
             x:DataType="viewModels:StudentChartsListViewModel"
             Title="Aktiviteler"
             BackgroundColor="#F5F5F5">

    <ContentPage.Resources>
        <converters:ThemeToIconConverter x:Key="ThemeToIconConverter"/>
        <converters:ThemeToTextConverter x:Key="ThemeToTextConverter"/>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, *">
        <Grid Grid.Row="0" BackgroundColor="#8B5CF6" Padding="15">
            <Label Text="Aktivite Çizelgeleri" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <Label Grid.Row="1" Text="{Binding StatusMessage}" TextColor="Red" FontAttributes="Bold" HorizontalOptions="Center" Padding="10"/>

        <CollectionView Grid.Row="2" ItemsSource="{Binding Charts}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dtos:ActivityChartDto">

                    <Frame Padding="15" Margin="5" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:StudentChartsListViewModel}}, Path=GoToDetailCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="50, *, 30">
                            <Frame Grid.Column="0" HeightRequest="45" WidthRequest="45" CornerRadius="22" BackgroundColor="#F0F0F0" Padding="0" HasShadow="False">
                                <Label Text="{Binding Theme, Converter={StaticResource ThemeToIconConverter}}" 
                                       FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Frame>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center">
                                <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding Theme, Converter={StaticResource ThemeToTextConverter}}" TextColor="Gray" FontSize="12"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2" Text="›" FontSize="30" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End"/>
                        </Grid>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="2" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#8B5CF6" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>
</ContentPage>