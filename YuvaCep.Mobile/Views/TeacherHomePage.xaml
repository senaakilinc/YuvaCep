<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:YuvaCep.Mobile.ViewModels"
             x:Class="YuvaCep.Mobile.Views.TeacherHomePage"
             Title="Ã–ÄŸretmen Paneli"
             BackgroundColor="#F3F4F6"
             Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <vm:TeacherHomeViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *">

        <Frame Grid.Row="0" BackgroundColor="#2563EB" CornerRadius="0" Padding="20,40,20,20" HasShadow="False">
            <Grid ColumnDefinitions="*, Auto">

                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="{Binding TeacherName, StringFormat='Merhaba, {0}'}" 
                   TextColor="White" Opacity="0.8" FontSize="14"/>
                    <Label Text="{Binding ClassName}" 
                   TextColor="White" FontAttributes="Bold" FontSize="24"/>
                    <Label Text="BugÃ¼n harika bir gÃ¼n! â˜€ï¸" 
                   TextColor="White" FontSize="12" Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <ImageButton Grid.Column="1"
                     Source="{FontImage Glyph='ðŸšª', Color='White', Size=30}"
                     Command="{Binding LogoutCommand}"
                     VerticalOptions="Start"
                     HorizontalOptions="End"
                     BackgroundColor="Transparent"
                     HeightRequest="40"
                     WidthRequest="40"/>
            </Grid>
        </Frame>

            <ScrollView Grid.Row="1" Padding="20">
            <CollectionView ItemsSource="{Binding MenuItems}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" BorderColor="Transparent" HeightRequest="140">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TeacherHomeViewModel}}, Path=NavigateCommand}" CommandParameter="{Binding Route}"/>
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="*, Auto" Padding="10">
                                <Frame Grid.Row="0" 
                                       BackgroundColor="{Binding ColorHex}" 
                                       CornerRadius="10" 
                                       Padding="0" 
                                       HeightRequest="50" 
                                       WidthRequest="50" 
                                       HorizontalOptions="Start" 
                                       VerticalOptions="Start"
                                       HasShadow="False">
                                    <Label Text="{Binding Icon}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>

                                <Label Grid.Row="1" 
                                       Text="{Binding Title}" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="#374151" 
                                       VerticalOptions="End"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

    </Grid>
</ContentPage>